#include <stdio.h>
#include <string.h>

int main() {
    char word1[] = "hello";
    char word2[] = "orange";

    if (word1[0] == word2[strlen(word2) - 1]) {
        printf("The first word starts with the same letter as the last letter of the second word.\n");
    } else {
        printf("The first word does not start with the same letter as the last letter of the second word.\n");
    }

    return 0;
}
